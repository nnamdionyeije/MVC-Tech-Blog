<h1>Update Post</h1>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Enter New Blog Information:</h3>

    <form class="form update-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{updatedPost.title}}"/>
      </div>
      <div class="form-group">
        <label for="post-desc">Post Content:</label>
        <textarea class="form-input" id="post-desc" name="post-desc" >{{updatedPost.content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-update" id="{{updatedPost.id}}">Update</button>
      </div>
    </form>
  </div>

  <script src="/js/updatedpost.js"></script>
